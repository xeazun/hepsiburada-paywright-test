{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@playwright/test", "node"],
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["tests/**/*.ts", "pages/**/*.ts", "**/*.ts"]
}
